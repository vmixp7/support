<div id="wrapper">
      <%- partial("../layout/left") %>
  <div id="page-wrapper">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">變更密碼</h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
          </div>
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-6">
                <form role="form" id="form_validation">
                  <div class='form-group'>
                    <%-: {is_require:true, is_readonly:false,  input_ch:"新密碼", id_name:"password", inputType:"password"}|create_input %>
                    <%-: {is_require:true, is_readonly:false,  input_ch:"確認密碼", id_name:"pw_confirm", inputType:"password"}|create_input %>
                  </div>
                  <input type="reset" class="btn btn-default" value="取消" />
                  <button type="submit" class="btn btn-primary">送出</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
  <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
<script>
$().ready(function(){
  removeFormCol('#form_validation', 'pw_confirm');
  apiSubmit('#form_validation', 'POST', '/admin/send_change_pass', '/');
  //補上驗證
  var input_validation = {
      // 驗證規則
      rules: {
          password: {required: true, minlength: 6},
          pw_confirm: {required: true, minlength: 6, equalTo: "#password"}
      }
  }
  check_vailidation( input_validation );
})
</script>
